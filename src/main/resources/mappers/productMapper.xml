<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.dlqudwp.allin.product.repository.ProductRepository">
  
  <insert id="insertProduct" parameterType="map">
		INSERT INTO 
			`product`
		(
			`userId`
			, `productName`
			, `content`
			, `imagePath`
			, `price`
		)	
		VALUE
		(
			#{userId}
			, #{productName}
			, #{content}
			, #{imagePath}
			, #{price}
		)
	</insert>
	
	<select id="selectProduct" parameterType="int" 
	resultType="com.dlqudwp.allin.product.domain.Product">
		SELECT 
			`id`
			, `productName`
			, `content`
			, `imagePath`
			, `price`
			, `createdAt`
			, `updatedAt`
		FROM 
			`product`
		WHERE 
			`id` = #{productId}
	
	</select>
	
	<select id="selectProductList" resultType="com.dlqudwp.allin.product.domain.Product">
		SELECT 
			`id`
			, `productName`
			, `content`
			, `imagePath`
			, `price`
			, `createdAt`
			, `updatedAt`
		FROM 
			`product`
		WHERE 
			`userId` = #{userId}
		ORDER BY 
			`id` DESC
	</select>
	
	<delete id="deleteProduct" parameterType="int">
		DELETE FROM 
			`product`
		WHERE 
			`id` = #{productId}
	
	</delete>
  
  	<update id="updateProductt" parameterType="map">
		UPDATE
			`product`
		SET
			`productName` = #{productName}
			, `content` = #{content}
			, `updatedAt` = now()
		WHERE
			`id` = #{productId}
	
	
	</update>
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  </mapper>